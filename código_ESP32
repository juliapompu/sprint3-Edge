#include <WiFi.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C LCD = LiquidCrystal_I2C(0x27, 16, 2);

#define BUZZER_PIN  4   // pino do buzzer
#define BUTTON_PIN  5   // pino do bot√£o

void setup() {
  Serial.begin(115200);

  LCD.init();
  LCD.backlight();
  LCD.setCursor(0, 0);
  LCD.print("Esperando...");
  
  pinMode(BUZZER_PIN, OUTPUT);
  pinMode(BUTTON_PIN, INPUT_PULLUP);
}

void loop() {
  if (digitalRead(BUTTON_PIN) == LOW) { 
    // Mostra mensagem na telinha
    LCD.clear();
    LCD.setCursor(0, 0);
    LCD.print("GOOOL!!!");
    LCD.setCursor(0, 1);
    LCD.print("Futebol Feminino");

   
    for (int i = 0; i < 3; i++) {
      digitalWrite(BUZZER_PIN, HIGH);
      delay(300);
      digitalWrite(BUZZER_PIN, LOW);
      delay(300);
    }

    delay(2000);
    LCD.clear();
    LCD.setCursor(0, 0);
    LCD.print("Esperando...");
  }
}
